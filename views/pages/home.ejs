<%- include('../layouts/main', { 
    title: 'Home - Discover Amazing Projects',
    headContent: `
        <style>
            .hero-section {
                position: relative;
                padding: 4rem 1rem;
                text-align: center;
                background: linear-gradient(180deg, 

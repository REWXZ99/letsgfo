<div class="upload-section">
    <div class="upload-container">
        <!-- Header -->
        <div class="upload-header">
            <h1 class="upload-title">
                <i class="fas fa-upload"></i>
                Upload New Project
            </h1>
            <p class="upload-subtitle">
                Share your amazing work with the community. Upload code or files for others to learn from.
            </p>
        </div>
        
        <!-- Messages -->
        <div class="form-error" id="formError"></div>
        <div class="form-success" id="formSuccess"></div>
        
        <!-- Upload Form -->
        <div class="upload-card">
            <form id="uploadForm" class="upload-form" enctype="multipart/form-data">
                <!-- Basic Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Basic Information
                    </h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-heading"></i>
                                Project Name
                            </label>
                            <input type="text" 
                                   id="projectName" 
                                   name="name" 
                                   class="form-input" 
                                   placeholder="Enter project name"
                                   required
                                   maxlength="100">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-code"></i>
                                Programming Language
                            </label>
                            <input type="text" 
                                   id="projectLanguage" 
                                   name="language" 
                                   class="form-input" 
                                   placeholder="e.g., JavaScript, Python, HTML"
                                   required
                                   maxlength="50">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label required">
                            <i class="fas fa-tag"></i>
                            Project Type
                        </label>
                        <div class="upload-options" id="typeOptions">
                            <div class="upload-option active" data-type="CODE">
                                <div class="option-icon">
                                    <i class="fas fa-code"></i>
                                </div>
                                <h4 class="option-title">Code</h4>
                                <p class="option-description">
                                    Paste your source code directly. Best for scripts, components, or small projects.
                                </p>
                            </div>
                            
                            <div class="upload-option" data-type="FILE">
                                <div class="option-icon">
                                    <i class="fas fa-file"></i>
                                </div>
                                <h4 class="option-title">File</h4>
                                <p class="option-description">
                                    Upload project files (ZIP, images, documents). Max 50MB per file.
                                </p>
                            </div>
                        </div>

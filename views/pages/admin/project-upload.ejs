<script>
    document.addEventListener('DOMContentLoaded', function() {
        // DOM Elements
        const form = document.getElementById('uploadForm');
        const typeOptions = document.querySelectorAll('.upload-option');
        const projectTypeInput = document.getElementById('projectType');
        const codeSection = document.getElementById('codeSection');
        const fileSection = document.getElementById('fileSection');
        const codeLanguageSelect = document.getElementById('codeLanguageSelect');
        const projectLanguageInput = document.getElementById('projectLanguage');
        const codeContent = document.getElementById('codeContent');
        const fileDropzone = document.getElementById('fileDropzone');
        const fileInput = document.getElementById('fileInput');
        const filePreview = document.getElementById('filePreview');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const removeFile = document.getElementById('removeFile');
        const submitBtn = document.getElementById('submitBtn');
        const formError = document.getElementById('formError');
        const formSuccess = document.getElementById('formSuccess');
        
        // Current state
        let selectedFile = null;
        let originalSubmitText = submitBtn.innerHTML;
        
        // Initialize
        setupEventListeners();
        syncLanguageInput();
        
        function setupEventListeners() {
            // Project type selection
            typeOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const type = this.dataset.type;
                    selectProjectType(type);
                });
            });
            
            // Code language sync
            codeLanguageSelect.addEventListener('change', syncLanguageInput);
            
            // File upload handling
            fileDropzone.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);
            
            // Drag and drop
            fileDropzone.addEventListener('dragover', handleDragOver);
            fileDropzone.addEventListener('dragleave', handleDragLeave);
            fileDropzone.addEventListener('drop', handleDrop);
            
            // Remove file
            removeFile.addEventListener('click', clearFile);
            
            // Form submission
            form.addEventListener('submit', handleFormSubmit);
        }
        
        function selectProjectType(type) {
            // Update active option
            typeOptions.forEach(option => {
                if (option.dataset.type === type) {
                    option.classList.add('active');
                } else {
                    option.classList.remove('active');
                }
            });
            
            // Update hidden input
            projectTypeInput.value = type;
            
            // Show/hide sections
            if (type === 'CODE') {
                codeSection.style.display = 'block';
                fileSection.style.display = 'none';
                codeContent.required = true;
                fileInput.required = false;
            } else {
                codeSection.style.display = 'none';
                fileSection.style.display = 'block';
                codeContent.required = false;
                fileInput.required = true;
            }
        }
        
        function syncLanguageInput() {
            if (projectLanguageInput.value === '') {
                const selectedLanguage = codeLanguageSelect.options[codeLanguageSelect.selectedIndex].text;
                projectLanguageInput.value = selectedLanguage;
            }
        }
        
        function handleFileSelect(e) {
            const file = e.target.files[0];
            if (file) {
                processFile(file);
            }
        }
        
        function handleDragOver(e) {
            e.preventDefault();
            fileDropzone.classList.add('dragover');
        }
        
        function handleDragLeave(e) {
            e.preventDefault();
            fileDropzone.classList.remove('dragover');
        }
        
        function handleDrop(e) {
            e.preventDefault();
            fileDropzone.classList.remove('dragover');
            
            const file = e.dataTransfer.files[0];
            if (file) {
                processFile(file);
            }
        }
        
        function processFile(file) {
            // Check file size (50MB max)
            const maxSize = 50 * 1024 * 1024; // 50MB
            if (file.size > maxSize) {
                showError('File size exceeds 50MB limit');
                return;
            }
            
            selectedFile = file;
            
            // Update preview
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            filePreview.style.display = 'block';
            
            // Update file input
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);
            fileInput.files = dataTransfer.files;
        }
        
        function clearFile() {
            selectedFile = null;
            filePreview.style.display = 'none';
            fileInput.value = '';
        }
        
        async function handleFormSubmit(e) {
            e.preventDefault();
            
            // Validate form
            if (!validateForm()) {
                return;
            }
            
            // Disable submit button
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Uploading...</span>';
            
            try {
                const formData = new FormData(form);
                
                // Convert tags string to array
                const tags = document.getElementById('projectTags').value;
                if (tags) {
                    const tagsArray = tags.split(',').map(tag => tag.trim()).filter(tag => tag);
                    formData.set('tags', tagsArray.join(','));
                }
                
                const response = await fetch('/api/admin/projects', {
                    method: 'POST',
                    headers: {
                        'X-CSRF-Token': window.appData.csrfToken
                    },
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Success
                    showSuccess('Project uploaded successfully!');
                    
                    // Reset form
                    setTimeout(() => {
                        form.reset();
                        clearFile();
                        selectProjectType('CODE');
                        syncLanguageInput();
                        showSuccess('Redirecting to project...');
                        
                        // Redirect to project page
                        setTimeout(() => {
                            window.location.href = `/project/${data.data._id}`;
                        }, 1500);
                    }, 1000);
                } else {
                    // Error
                    showError(data.message || 'Failed to upload project');
                }
            } catch (error) {
                console.error('Upload error:', error);
                showError('Network error. Please try again.');
            } finally {
                // Re-enable submit button
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalSubmitText;
            }
        }
        
        function validateForm() {
            const projectType = projectTypeInput.value;
            const projectName = document.getElementById('projectName').value.trim();
            const projectLanguage = document.getElementById('projectLanguage').value.trim();
            
            // Basic validation
            if (!projectName) {
                showError('Project name is required');

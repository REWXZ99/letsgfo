<div class="dashboard-section">
    <div class="dashboard-container">
        <!-- Header -->
        <div class="dashboard-header">
            <h1 class="dashboard-title">Admin Dashboard</h1>
            <p class="dashboard-subtitle">Manage your projects and platform</p>
        </div>
        
        <!-- Welcome Card -->
        <div class="dashboard-welcome">
            <img src="<%= admin.photoUrl || '/images/default-avatar.png' %>" 
                 alt="<%= admin.name %>"
                 class="welcome-avatar">
            <div class="welcome-content">
                <h3>Welcome back, <%= admin.name %>!</h3>
                <p>You have full control over the platform.</p>
                <span class="welcome-role"><%= admin.role %></span>
            </div>
        </div>
        
        <!-- Stats Grid -->
        <div class="dashboard-grid" id="statsGrid">
            <!-- Stats will be loaded via JavaScript -->
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <span class="stat-trend trend-up" id="projectsTrend">+0%</span>
                </div>
                <div class="stat-title">Total Projects</div>
                <div class="stat-value" id="totalProjects">0</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <span class="stat-trend trend-up" id="likesTrend">+0%</span>
                </div>
                <div class="stat-title">Total Likes</div>
                <div class="stat-value" id="totalLikes">0</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-download"></i>
                    </div>
                    <span class="stat-trend trend-up" id="downloadsTrend">+0%</span>
                </div>
                <div class="stat-title">Total Downloads</div>
                <div class="stat-value" id="totalDownloads">0</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <span class="stat-trend trend-up" id="chatsTrend">+0%</span>
                </div>
                <div class="stat-title">Active Chats</div>
                <div class="stat-value" id="activeChats">0</div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="dashboard-actions">
            <a href="/admin/projects/upload" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-upload"></i>
                </div>
                <h4 class="action-title">Upload New Project</h4>
                <p class="action-description">
                    Share your code or files with the community. Support CODE or FILE type uploads.
                </p>
            </a>
            
            <a href="/admin/projects" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-list"></i>
                </div>
                <h4 class="action-title">Manage Projects</h4>
                <p class="action-description">
                    View, edit, or delete your existing projects. Track performance and engagement.
                </p>
            </a>
            
            <a href="/admin/profile" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-user-cog"></i>
                </div>
                <h4 class="action-title">Edit Profile</h4>
                <p class="action-description">
                    Update your profile information, photo, quote, hashtags, and password.
                </p>
            </a>
            
            <a href="/admin/chats" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <h4 class="action-title">View Chats</h4>
                <p class="action-description">
                    Manage conversations with users. Respond to questions and provide support.
                </p>
            </a>
        </div>
        
        <!-- Recent Projects -->
        <div class="recent-projects-section">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-history"></i>
                    Recent Projects
                </h2>
                <a href="/admin/projects" class="cyberpunk-btn btn-sm">
                    <i class="fas fa-eye"></i>
                    <span>View All</span>
                </a>
            </div>
            
            <div class="projects-table" id="projectsTable">
                <!-- Projects will be loaded via JavaScript -->
                <div class="empty-table">
                    <i class="fas fa-code"></i>
                    <p>No projects found. Upload your first project!</p>
                </div>
            </div>
        </div>
        
        <!-- Recent Chats -->
        <div class="chats-section">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-comment-dots"></i>
                    Recent Chats
                </h2>
                <a href="/admin/chats" class="cyberpunk-btn btn-sm">
                    <i class="fas fa-comments"></i>
                    <span>View All</span>
                </a>
            </div>
            
            <div class="chats-grid" id="chatsGrid">
                <!-- Chats will be loaded via JavaScript -->
                <div class="chat-card">
                    <div class="chat-header">
                        <div class="chat-user">USER1234</div>
                        <div class="chat-time">2 hours ago</div>
                    </div>
                    <p class="chat-preview">
                        Hello, I have a question about your React project...
                    </p>
                    <span class="chat-status status-open">Open</span>
                </div>
            </div>
        </div>
        
        <!-- Footer -->
        <div class="dashboard-footer">
            <p>Last login: <%= new Date().toLocaleDateString('en-US', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            }) %></p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        loadDashboardStats();
        loadRecentProjects();
        loadRecentChats();
        setupDashboardEvents();
    });
    
    async function loadDashboardStats() {
        try {
            const response = await fetch('/api/admin/stats', {
                headers: {
                    'X-CSRF-Token': window.appData.csrfToken
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                updateStatsUI(data.data);
            }
        } catch (error) {
            console.error('Error loading dashboard stats:', error);
        }
    }
    
    function updateStatsUI(stats) {
        // Update project stats
        document.getElementById('totalProjects').textContent = stats.projects.total;
        document.getElementById('totalLikes').textContent = stats.projects.likes.toLocaleString();
        document.getElementById('totalDownloads').textContent = stats.projects.downloads.toLocaleString();
        document.getElementById('activeChats').textContent = stats.chats.open;
        
        // Update trends (simulated for demo)
        document.getElementById('projectsTrend').textContent = '+12%';
        document.getElementById('likesTrend').textContent = '+24%';
        document.getElementById('downloadsTrend').textContent = '+18%';
        document.getElementById('chatsTrend').textContent = stats.chats.open > 0 ? '+5%' : '0%';
    }
    
    async function loadRecentProjects() {
        try {
            const response = await fetch('/api/admin/my-projects?limit=5', {
                headers: {
                    'X-CSRF-Token': window.appData.csrfToken
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                displayRecentProjects(data.data);
            }
        } catch (error) {
            console.error('Error loading recent projects:', error);
        }
    }
    
    function displayRecentProjects(projects) {
        const table = document.getElementById('projectsTable');
        
        if (!projects || projects.length === 0) {
            table.innerHTML = `
                <div class="empty-table">
                    <i class="fas fa-code"></i>
                    <p>No projects found. Upload your first project!</p>
                    <a href="/admin/projects/upload" class="cyberpunk-btn btn-sm" style="margin-top: 1rem;">
                        <i class="fas fa-upload"></i>
                        <span>Upload Project</span>
                    </a>
                </div>
            `;
            return;
        }
        
        let html = `
            <div class="table-header">
                <div>Project Name</div>
                <div>Language</div>
                <div>Likes</div>
                <div>Downloads</div>
                <div>Actions</div>
            </div>
        `;
        
        projects.forEach(project => {
            const languageColor = getLanguageColor(project.language);
            
            html += `
                <div class="table-row">
                    <div class="table-cell project-name" data-label="Project">
                        <i class="fas ${project.type === 'CODE' ? 'fa-code' : 'fa-file'}"></i>
                        <span>${escapeHtml(project.name)}</span>
                    </div>
                    <div class="table-cell" data-label="Language">
                        <span class="project-language" style="background: ${languageColor}20; border-color: ${languageColor}40; color: ${languageColor}">
                            ${escapeHtml(project.language)}
                        </span>
                    </div>
                    <div class="table-cell" data-label="Likes">
                        <div class="project-stats">
                            <i class="fas fa-heart"></i>
                            <span>${project.likes}</span>
                        </div>
                    </div>
                    <div class="table-cell" data-label="Downloads">
                        <div class="project-stats">
                            <i class="fas fa-download"></i>
                            <span>${project.downloads}</span>
                        </div>
                    </div>
                    <div class="table-cell" data-label="Actions">
                        <div class="project-actions">
                            <a href="/project/${project._id}" class="table-btn" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admin/projects/edit/${project._id}" class="table-btn" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="table-btn delete-project" data-id="${project._id}" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
        });
        
        table.innerHTML = html;
        
        // Add delete event listeners
        document.querySelectorAll('.delete-project').forEach(button => {
            button.addEventListener('click', function() {
                const projectId = this.dataset.id;
                deleteProject(projectId);
            });
        });
    }
    
    async function loadRecentChats() {
        try {
            const response = await fetch('/api/admin/chats?status=open&limit=3', {
                headers: {
                    'X-CSRF-Token': window.appData.csrfToken
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                displayRecentChats(data.data);
            }
        } catch (error) {
            console.error('Error loading recent chats:', error);
        }
    }
    
    function displayRecentChats(chats) {
        const grid = document.getElementById('chatsGrid');
        
        if (!chats || chats.length === 0) {
            grid.innerHTML = `
                <div class="chat-card">
                    <div class="chat-header">
                        <div class="chat-user">No active chats</div>
                    </div>
                    <p class="chat-preview">
                        You don't have any active conversations. Check back later!
                    </p>
                    <span class="chat-status status-closed">None</span>
                </div>
            `;
            return;
        }
        
        let html = '';
        
        chats.forEach(chat => {
            const lastMessage = chat.messages[chat.messages.length - 1];
            const timeAgo = formatRelativeTime(chat.updatedAt);
            
            html += `
                <div class="chat-card" data-chat-id="${chat._id}">
                    <div class="chat-header">
                        <div class="chat-user">${chat.userId}</div>
                        <div class="chat-time">${timeAgo}</div>
                    </div>
                    <p class="chat-preview">
                        ${escapeHtml(lastMessage?.content || 'No messages')}
                    </p>
                    <span class="chat-status ${chat.status === 'open' ? 'status-open' : 'status-closed'}">
                        ${chat.status === 'open' ? 'Open' : 'Closed'}
                    </span>
                </div>
            `;
        });
        
        grid.innerHTML = html;
        
        // Add click event to open chat
        document.querySelectorAll('.chat-card').forEach(card => {
            card.addEventListener('click', function() {
                const chatId = this.dataset.chatId;
                window.location.href = `/admin/chats/${chatId}`;
            });
        });
    }
    
    async function deleteProject(projectId) {
        if (!confirm('Are you sure you want to delete this project? This action cannot be undone.')) {
            return;
        }
        
        try {
            const response = await fetch(`/api/admin/projects/${projectId}`, {
                method: 'DELETE',
                headers: {
                    'X-CSRF-Token': window.appData.csrfToken
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                showAlert('success', 'Project deleted successfully');
                
                // Reload recent projects
                loadRecentProjects();
                loadDashboardStats();
            } else {
                showAlert('error', data.message || 'Failed to delete project');
            }
        } catch (error) {
            console.error('Error deleting project:', error);
            showAlert('error', 'Failed to delete project');
        }
    }
    
    function setupDashboardEvents() {
        // Auto-refresh stats every 30 seconds
        setInterval(() => {
            loadDashboardStats();
        }, 30000);
        
        // Socket.IO updates
        if (window.socket) {
            window.socket.on('project-liked', (projectId) => {
                // Refresh stats when project is liked
                loadDashboardStats();
            });
        }
    }
    
    function showAlert(type, message) {
        // Create alert element
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type}`;
        
        const icons = {
            success: 'fa-check-circle',
            error: 'fa-exclamation-circle',
            info: 'fa-info-circle'
        };
        
        alertDiv.innerHTML = `
            <i class="fas ${icons[type]}"></i>
            <span>${escapeHtml(message)}</span>
            <button class="alert-close">&times;</button>
        `;
        
        // Add to page
        const main = document.querySelector('.cyberpunk-main');
        if (main) {
            main.insertBefore(alertDiv, main.firstChild);
        }
        
        // Auto-remove after 5 seconds
        setTimeout(() => {
            alertDiv.remove();
        }, 5000);
        
        // Close button functionality
        alertDiv.querySelector('.alert-close').addEventListener('click', () => {
            alertDiv.remove();
        });
    }
    
    // Helper functions
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
